<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="OrderMapper">

    <select id="selectOrderRank" resultMap="rankItem">
        select g.name, sum(o.price * o.quantity) as total_price
        from goods as g
        left join `order` as o on o.goods_id = g.ID
        group by g.id
        order by total_price desc;
    </select>

    <resultMap id="rankItem" type="com.github.hcsp.entity.OrderRankItem">
        <result property="totalPrice" column="total_price" />
        <association property="goods" javaType="com.github.hcsp.entity.Goods">
            <result property="name" column="name" />
        </association>
    </resultMap>

</mapper>